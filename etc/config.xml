<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <wechatpay>
                <payment_action>true</payment_action> <!-- You can use another method like authorize,capture etc.  -->
                <model>AlbertMage\WeChatPay\Model\PaymentMethod</model>
                <active>1</active>
                <title>WeChat Payment</title>
                <order_status>pending</order_status> <!-- Set your default order status -->
            </wechatpay>
        </payment>
    </default>
</config>